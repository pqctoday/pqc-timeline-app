{
  "name": "pqc-timeline-app",
  "private": true,
  "version": "1.17.4",
  "license": "GPL-3.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,css,html}": "prettier --write"
  },
  "scripts": {
    "predev": "cp -r node_modules/@openforge-sh/liboqs/dist public/dist",
    "dev": "vite",
    "scrape": "NODE_TLS_REJECT_UNAUTHORIZED=0 npx tsx scripts/scrape-compliance.ts",
    "prebuild": "npm run scrape",
    "build": "cp -r node_modules/@openforge-sh/liboqs/dist public/dist && tsc -b && vite build && cp dist/index.html dist/404.html",
    "lint": "eslint src scripts e2e *.ts *.js *.cjs",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "download:library": "node scripts/download-library.js",
    "download:library:dry": "node scripts/download-library.js --dry-run",
    "summarize:library": "python3 scripts/summarize-library.py"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@openforge-sh/liboqs": "^0.14.3",
    "@scure/base": "^2.0.0",
    "@scure/bip32": "^2.0.1",
    "@scure/bip39": "^2.0.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/file-saver": "^2.0.7",
    "@types/papaparse": "^5.5.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ed25519-hd-key": "^1.3.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.27.5",
    "jszip": "^3.10.1",
    "localforage": "^1.10.0",
    "lucide-react": "^0.562.0",
    "micro-eth-signer": "^0.18.1",
    "papaparse": "^5.5.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-focus-lock": "^2.13.7",
    "react-ga4": "^2.1.0",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jsdom": "^27.0.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.0.9",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-testing-library": "^7.16.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "lodash": "^4.17.23",
    "pdf-parse": "^2.4.5",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.17"
  }
}
