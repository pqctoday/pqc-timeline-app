{
  "name": "pqc-timeline-app",
  "private": true,
  "version": "1.5.0",
  "license": "GPL-3.0",
  "type": "module",
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,css,html}": "prettier --write"
  },
  "scripts": {
    "dev": "vite",
    "build": "mkdir -p public/dist && cp -r node_modules/@openforge-sh/liboqs/dist/* public/dist/ && tsc -b && vite build && cp dist/index.html dist/404.html",
    "lint": "eslint src scripts e2e *.ts *.js *.cjs",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@openforge-sh/liboqs": "^0.14.3",
    "@scure/base": "^2.0.0",
    "@scure/bip32": "^2.0.1",
    "@scure/bip39": "^2.0.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/file-saver": "^2.0.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ed25519-hd-key": "^1.3.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.24",
    "immer": "^11.0.1",
    "jszip": "^3.10.1",
    "localforage": "^1.10.0",
    "lucide-react": "^0.554.0",
    "micro-eth-signer": "^0.18.1",
    "mlkem-wasm": "^0.0.7",
    "openssl-wasm": "^3.1.0",
    "pqcrypto": "^1.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-ga4": "^2.1.0",
    "react-router-dom": "^7.10.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.14",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-testing-library": "^7.13.5",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-top-level-await": "^1.6.0",
